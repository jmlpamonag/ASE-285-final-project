<!DOCTYPE html>
<html>
    <head>
        <style>
        table {
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        </style>
    </head>
    <body>
        <div style="width: 85%; margin: 0 7.5%;">
            <div style="text-align: center; padding-left: 50px;">            
                <h3>Messages</h5>
                <table>
                <% if (posts.length > 0) { %>
                    <% posts.forEach(post => {%>
                       <tr><td><%= post.title %></td><td><%= post.date %></td><td><%= post.description %></td></tr>
                    <%  });%>
                <% }%>
                </table>
             </div>
        </div>
    </body>
</html>